// mydata

.mydata

  a.account-link(href="#")
    svg: use(href="img/icons/sprite.svg#arrow-back")
    span Личный кабинет

  p.mydata__title Мои данные

  form(action="")

    .mydata__grid

      .form-group
        label Имя
          sup *
        input(type="text" name="#" value="Анна" required)

      .form-group
        label Фамилия
          sup *
        input(type="text" name="#" value="Петрова" required)

      .form-group
        label Телефон
          sup *
        input.phone(type="text" name="#" placeholder="+7 111 111 11 11" required)

      .form-group
        label Почта
          sup *
        input(type="email" name="#" value="Anna1989gmail.com" required)

    .mydata__mailing

      p Активна рассылка

      a.js-modal-show(href="#js-modal-mailing")
        svg: use(href="img/icons/sprite.svg#close")
        span Отменить рассылку

    button.form-btn(type="submit")
      span Сохранить
      span Сохранить

